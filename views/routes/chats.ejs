<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Zappy | Chats</title>
    </head>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-size: 1.2rem;
            overflow: hidden;
        }
        .navbar {
            height: 70px;
            border-bottom: 1px solid black;
            display: flex;
            flex-wrap: wrap;
            padding: 0 1rem 0 1rem;
            justify-content: space-between;
            align-items: center;
        }
        .sidebar {
            height: 60vh;
            width: 25%;
            border: 2px solid black;
            display: flex;
            flex-direction: column;
            align-items: center;
            overflow-y: auto;
            border-radius: 12px;
        }
        .containers {
            height: 90vh;
            width: 100vw;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 1rem;
        }
        .recents {
            height: 60vh;
            width: 25%;
            border: 2px solid black;
            display: flex;
            flex-direction: column;
            align-items: center;
            overflow-y: auto;
            border-radius: 12px;
        }
        .groups {
            height: 60vh;
            width: 25%;
            border: 2px solid black;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-around;
            overflow-y: auto;
            border-radius: 12px;
        }
        .sidebar::-webkit-scrollbar {
            display: none;
        }
        .groups::-webkit-scrollbar {
            display: none;
        }
        .recents::-webkit-scrollbar {
            display: none;
        }
        a {
            font-size: 1.1rem;
        }
        @media (max-width: 980px) {
            h1 {
                font-size: 1.4rem;
            }
        }
        .groups .gnames {
            height: 65%;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            overflow-y: auto;
        }
        .groups .gnames::-webkit-scrollbar {
            display: none;
        }
        #group-creation {
            margin-top: 2.5rem;
            margin-bottom: 1rem;
        }
        .requests {
            display: flex;
            gap: 10px;
        }
    </style>
    <body>
        <div class="navbar">
            <div class="user">
                <h3><%= details.fname %> <%= details.lname %></h3>
            </div>
            <div class="requests">
                <%=requests.length%>
                <a href="/requests">Join Requests</a>
                <a href="/">Log Out</a>
            </div>
        </div>
        <div class="containers">
            <div class="sidebar">
                <h1>Start Chat With...</h1>
                <% for(let i = 0; i < otherUsers.length; i++) { %>
                    <a href="/chats/<%= otherUsers[i]._id %>" class="users"><%= otherUsers[i].fname %> <%= otherUsers[i].lname %></a>
                <% } %>
            </div>
            <div class="recents">
                <h1>Recents</h1>
                <% for(let i = 0; i < recieversUsername.length; i++) { %>
                    <a href="/chats/recents/<%= recieversUsername[i] %>" class="users"><%= recieversUsername[i] %></a>
                <% } %>
            </div>
            <div class="groups">
                <h1>Groups</h1>
                <div class="gnames">
                    <% for(let i = 0; i < groups.length; i++) { %>
                        <a href="/chats/group/<%= groups[i].groupName %>" class="users"><%= groups[i].groupName %></a>
                    <% } %>
                </div>
                <button id="group-creation">+Create Group</button>
            </div>
        </div>
    </body>
    <script>
        const createGroup = document.getElementById("group-creation");
        createGroup.addEventListener("click", ()=>{
            window.location.href = "/create-group";
        });
    </script>
</html>