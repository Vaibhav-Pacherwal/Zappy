<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zappy | Chats</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script>
        window.addEventListener("pageshow", function (event) {
            if (event.persisted || window.performance.getEntriesByType("navigation")[0].type === "back_forward") {
                window.location.reload();
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                setTimeout(() => {
                    if (alert && alert.parentElement) {
                        alert.style.opacity = '0';
                        alert.style.transform = 'translateX(-50%) translateY(-20px)';
                        setTimeout(() => {
                            if (alert && alert.parentElement) {
                                alert.remove();
                            }
                        }, 300);
                    }
                }, 5000);
            });
        });
    </script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/chatHome.css">
</head>

<body>
    <nav class="navbar" id="navbar">
        <div class="navbar-left">
            <div class="user">
                <div class="user-avatar">
                    <%= details.fname.charAt(0) %>
                        <%= details.lname.charAt(0) %>
                </div>
                <h3>
                    <%= details.fname %>
                        <%= details.lname %>
                </h3>
            </div>
        </div>
        <button class="mobile-menu-toggle" id="mobileMenuToggle">
            â˜°
        </button>
        <div class="requests" id="requestsMenu">
            <a href="/requests" data-count="<%=requests.length%>">
                <div class="icon">ðŸ””</div>
                <span class="text">Join Requests</span>
            </a>
            <a href="/">
                <div class="icon">ðŸšª</div>
                <span class="text">Log Out</span>
            </a>
        </div>
    </nav>

    <%- include('../partials/flash.ejs') %>

    <div class="containers">
        <div class="recents">
            <h1>Recent Chats</h1>
            <% if (recieversUsername.length===0) { %>
                <div class="empty-state">
                    <div class="empty-icon">ðŸ’¬</div>
                    <div class="empty-text">No recent conversations</div>
                </div>
                <% } else { %>
                    <div class="recents-content">
                        <% for(let i=0; i < recieversUsername.length; i++) { %>
                            <a href="/chats/recents/<%= recieversUsername[i] %>" class="users">
                                <div class="user-icon">
                                    <%= recieversUsername[i].charAt(0).toUpperCase() %>
                                </div>
                                <div>
                                    <%= recieversUsername[i] %>
                                </div>
                            </a>
                            <% } %>
                    </div>
                    <% } %>
        </div>

        <div class="groups">
            <div>
                <h1>Groups</h1>
                <div class="gnames">
                    <% if (groups.length===0) { %>
                        <div class="empty-state">
                            <div class="empty-icon">ðŸ‘¥</div>
                            <div class="empty-text">No groups yet. Create your first group!</div>
                        </div>
                        <% } else { %>
                            <% for(let i=0; i < groups.length; i++) { %>
                                <a href="/chats/group/<%= groups[i].groupName %>" class="users">
                                    <div class="user-icon">ðŸ‘¥</div>
                                    <div>
                                        <%= groups[i].groupName %>
                                    </div>
                                </a>
                                <% } %>
                                    <% } %>
                </div>
            </div>
            <button id="group-creation">
                <span class="btn-icon">âž•</span>
                Create Group
            </button>
        </div>

        <div class="sidebar">
            <h1>Start Chat With...</h1>
            <% if (otherUsers.length===0) { %>
                <div class="empty-state">
                    <div class="empty-icon">ðŸ‘¥</div>
                    <div class="empty-text">No users available to chat with</div>
                </div>
                <% } else { %>
                    <div class="sidebar-content">
                        <% for(let i=0; i < otherUsers.length; i++) { %>
                            <a href="/chats/<%= otherUsers[i]._id %>" class="users">
                                <div class="user-icon">
                                    <%= otherUsers[i].fname.charAt(0) %>
                                        <%= otherUsers[i].lname.charAt(0) %>
                                </div>
                                <div>
                                    <%= otherUsers[i].fname %>
                                        <%= otherUsers[i].lname %>
                                </div>
                            </a>
                            <% } %>
                    </div>
                    <% } %>
        </div>
    </div>

    <script>
        // Enhanced navbar functionality
        const navbar = document.getElementById('navbar');
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const requestsMenu = document.getElementById('requestsMenu');

        let lastScrollY = window.scrollY;
        let ticking = false;

        function updateNavbar() {
            const currentScrollY = window.scrollY;
            
            if (currentScrollY > 80 && currentScrollY > lastScrollY) {
                if (!navbar.classList.contains('collapsed')) {
                    navbar.classList.add('collapsed');
                }
            } else if (currentScrollY < lastScrollY && currentScrollY < 50) {
                if (navbar.classList.contains('collapsed')) {
                    navbar.classList.remove('collapsed');
                }
            }
            
            lastScrollY = currentScrollY;
            ticking = false;
        }

        function requestTick() {
            if (!ticking) {
                requestAnimationFrame(updateNavbar);
                ticking = true;
            }
        }

        window.addEventListener('scroll', requestTick);

        // Mobile menu functionality
        mobileMenuToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            requestsMenu.classList.toggle('show');
            
            // Animate hamburger icon
            if (requestsMenu.classList.contains('show')) {
                mobileMenuToggle.innerHTML = 'âœ•';
                mobileMenuToggle.style.transform = 'rotate(180deg)';
            } else {
                mobileMenuToggle.innerHTML = 'â˜°';
                mobileMenuToggle.style.transform = 'rotate(0deg)';
            }
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!requestsMenu.contains(e.target) && !mobileMenuToggle.contains(e.target)) {
                requestsMenu.classList.remove('show');
                mobileMenuToggle.innerHTML = 'â˜°';
                mobileMenuToggle.style.transform = 'rotate(0deg)';
            }
        });

        // Group creation functionality
        const createGroup = document.getElementById("group-creation");
        createGroup.addEventListener("click", () => {
            createGroup.style.transform = 'scale(0.95)';
            setTimeout(() => {
                createGroup.style.transform = '';
                window.location.href = "/create-group";
            }, 150);
        });

        // Enhanced user item animations
        const userItems = document.querySelectorAll('.users');
        userItems.forEach((item, index) => {
            item.style.opacity = '0';
            item.style.transform = 'translateY(20px)';
            setTimeout(() => {
                item.style.transition = 'all 0.3s ease';
                item.style.opacity = '1';
                item.style.transform = 'translateY(0)';
            }, index * 50 + 200);

            item.addEventListener('click', (e) => {
                e.preventDefault();
                item.style.transform = 'translateX(6px) scale(0.98)';
                setTimeout(() => {
                    window.location.href = item.getAttribute('href');
                }, 150);
            });
        });

        // Enhanced panel interactions
        const panels = document.querySelectorAll('.sidebar, .recents, .groups');
        panels.forEach(panel => {
            panel.addEventListener('mouseenter', () => {
                panel.style.borderColor = 'var(--border-medium)';
            });

            panel.addEventListener('mouseleave', () => {
                panel.style.borderColor = 'var(--border-light)';
            });
        });
    </script>
</body>

</html>