<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zappy | Login</title>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                setTimeout(() => {
                    if (alert && alert.parentElement) {
                        alert.style.opacity = '0';
                        alert.style.transform = 'translateX(-50%) translateY(-20px)';
                        setTimeout(() => {
                            if (alert && alert.parentElement) {
                                alert.remove();
                            }
                        }, 300);
                    }
                }, 5000);
            });
        });
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/login.css">
</head>

<%- include('../partials/flash.ejs') %>
<body>  
    <div class="container">
        <div class="logo">
            <h1>Zappy</h1>
            <p>Welcome back! Sign in to continue</p>
        </div>

        <form class="form-container" action="/login" method="post" id="loginForm">
            <div id="errorMessage" class="error-message"></div>

            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" placeholder="@johndoe123" required
                    autocomplete="username">
            </div>

            <div class="form-group">
                <label for="pass">Password</label>
                <div class="input-wrapper">
                    <input type="password" name="password" id="pass" placeholder="Enter your password" required
                        autocomplete="current-password">
                    <button type="button" class="password-toggle" onclick="togglePassword()">
                        üëÅÔ∏è
                    </button>
                </div>
            </div>

            <div class="form-options">
                <div class="remember-me">
                    <input type="checkbox" id="remember" name="remember">
                    <label for="remember">Remember me</label>
                </div>
                <a href="#" class="forgot-password">Forgot password?</a>
            </div>

            <button type="submit" class="btn" id="loginBtn">
                Sign In
            </button>

            <div class="divider">
                <span>or</span>
            </div>

            <a href="/verification" class="email-login">
                üìß Continue with Email Verification
            </a>

            <div class="signup-link">
                Don't have an account? <a href="/signup-form">Create one here</a>
            </div>
        </form>
    </div>

    <script src="/js/login.js"></script>
</body>

</html>