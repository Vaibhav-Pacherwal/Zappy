<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= grpDetails.groupName %></title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <style>
            body {
                padding: 0;
                margin: 0;
                overflow: hidden;
            }
            .group-info {
                max-height: 300px;
                width: 250px;
                background-color: #f8f8fd;
                border: 2px solid black;
                border-radius: 12px;
                padding: 1rem;
                top: 50%;
                left: 50%;
                transform: translate(-50%,-50%);
                position: absolute;
                z-index: 1;
                overflow-y: auto;
                display: flex;
                flex-direction: column;
                gap: 1rem;
                display: none;
            }
            .show-details {
                display: block;
            }
            .group-info::-webkit-scrollbar {
                display: none;
            }
            .group-info .head {
                text-align: center;
                font-size: 1.3rem;
                font-weight: 600;
            }
            .group-info .details {
                padding-left: 0.5rem;
            }
            .exit-confirmation {
                padding: 1rem;
                font-size: 1.2rem;
                border: 2px solid black;
                border-radius: 12px;
                background-color: #f8f8fd;
                top: 50%;
                left: 50%;
                transform: translate(-50%,-50%);
                position: absolute;
                z-index: 1;
                display: flex;
                flex-direction: column;
                gap: 1rem;
                display: none;
            }
            .sCBox {
                display: block;
            }
            .btns {
                width: 100%;
                display: flex;
                justify-content: center;
                gap: 0.5rem;
                margin-top: 1rem;
            }
            .confirmation-btn {
                padding: 0.5rem;
                font-size: 1.1rem;
                background-color: black;
                border: none;
                border-radius: 12px;
                color: white;
                cursor: pointer;
            }
            .chatbox {
                left: 50%;
                top: 50%;
                transform: translate(-50%,-50%);
                position: absolute;
                height: 80%;
                width: 60%;
                min-width: 350px;
                padding: 1rem;
                border: 2px solid black;
                border-radius: 12px;
                display: flex;
                flex-direction: column;
            }
            .navbar {
                height: 50px;
                width: 100%;
                border-bottom: 1px solid black;
                display: flex;
                align-items: center;
                justify-content: space-between;
            }
            .navbar .links {
                display: flex;
                align-items: center;
                gap: 1rem;
            }
            .navbar .links a {
                font-size: 1.1rem;
                text-decoration: none;
                color: #000000;
            }
            .messages {
                height: 80%;
                width: 100%;
                border-bottom: 1px solid black;
                overflow-y: auto;
            }
            .messages::-webkit-scrollbar {
                display: none;
            }
            .input-msg {
                height: 70px;
                width: 100%;
            }
            .input-msg #inputBox {
                padding: 1rem;
                width: 100%;
                display: flex;
                justify-content: center;
                gap: 0.5rem;
            }
            .input-msg #inputBox input {
                width: 80%;
                padding: 1rem;
                border: 1px solid black;
                font-size: 1.1rem;
                border-radius: 12px;
            }
            .input-msg #inputBox button {
                padding: 1rem;
                font-size: 1.1rem;
                background-color: black;
                color: white;
                cursor: pointer;
                border: none;
                border-radius: 12px;
            }
        </style>
    </head>
    <body>
        <div class="group-info">
            <i class="fa-solid fa-xmark" id="cross" style="color: #000000; top: 0.6rem; right: 0.6rem; position: absolute; cursor: pointer;"></i>
            <div class="head">
                <%= grpDetails.groupName %>
            </div>
            <div class="details">
                <strong>Admin: </strong><%= grpDetails.groupAdmin %><br>
                <strong>Other Members: </strong><% otherMembers.forEach(member => { %>
                                                    <%= member %> |  
                                                <% }) %><br>
                <strong>Date of Creation: </strong><%= grpDetails.date %><br>
                <strong>createdAt: </strong><%= grpDetails.createdAt %>
            </div>
        </div>
        <div class="exit-confirmation">
            <strong>Do you really want to leave this group?</strong>
            <div class="btns">
                <button id="yes" class="confirmation-btn">Yes</button>
                <button id="no" class="confirmation-btn">No</button>
            </div>
        </div>
        <div class="chatbox">
            <div class="navbar">
                <h2><%= grpDetails.groupName %></h2>
                <div class="links">
                    <a href="#" id="about"><i class="fa-solid fa-circle-info" style="color: #000000;"></i>About</a>
                    <a href="#" id="exit"><i class="fa-solid fa-right-from-bracket" style="color: #000000;"></i>Exit Group</a>
                </div>
            </div>
            <div class="messages">
                <% sortedChats.forEach(day => { %>
                    <p style="text-align: center;"><%= day[0].date %></p>
                    <% day.forEach(msg => { %>
                        <p>
                            <%= msg.sender %>: <%= msg.content %>(<%= msg.time %>)
                        </p>
                    <% }) %>
                <% }) %>
            </div>
            <div class="input-msg">
                <form id="inputBox" action="#">
                    <input type="text" placeholder="Type Your Message Here..." id="content">
                    <button>Send</button>
                </form>
            </div>
        </div>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/moment.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        let about = document.getElementById("about");
        let cross = document.getElementById("cross");
        let exitGroup = document.getElementById("exit");
        let yesBtn = document.getElementById("yes");
        let noBtn = document.getElementById("no");
        let form = document.getElementById("inputBox");
        let input = document.getElementById("content");
        let messages = document.querySelector(".messages");
        let confirmationBox  = document.querySelector(".exit-confirmation");
        let detailBox = document.querySelector(".group-info");
        about.addEventListener("click", (e)=>{
            e.preventDefault();
            detailBox.classList.add("show-details");
        });
        cross.addEventListener("click", ()=>{
            detailBox.classList.remove("show-details");
        });
        exitGroup.addEventListener("click", (e)=>{
            e.preventDefault();
            confirmationBox.classList.add("sCBox");
        });
        noBtn.addEventListener("click", ()=>{
            confirmationBox.classList.remove("sCBox");
        });
        yesBtn.addEventListener("click", ()=>{
            window.location.href = "/exit/<%= grpDetails._id %>";
        })

        const socket = io();
        socket.emit("join group", "<%= grpDetails.groupName %>");

        form.addEventListener("submit", (e)=>{
            e.preventDefault();
            let currentMessage = input.value.trim();
            let currTime = moment().format("hh:mm A");

            if (currentMessage !== "") {
                socket.emit("group chat", {
                    groupName: "<%= grpDetails.groupName %>",
                    sender: "<%= userDetails.username %>",
                    content: currentMessage,
                    time: currTime
                });
                input.value = "";
            }
        });

        socket.on("group chat", (msg) => {
            let p = document.createElement("p");
            p.innerText = `${msg.sender}: ${msg.content}(${msg.time})`;
            messages.appendChild(p);
            messages.scrollTop = messages.scrollHeight;
        });
    </script>
</html>