<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= grpDetails.groupName %> - Modern Chat
    </title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/groupChat.css">
</head>

<body>
    <div id="group-info-modal">
        <button class="close-btn" id="close-info">&times;</button>
        <div class="group-info-header">
            <h2>
                <%= grpDetails.groupName %>
            </h2>
        </div>
        <div class="group-details">
            <div class="detail-item">
                <span class="detail-label">Admin:</span>
                <span class="detail-value">
                    <%= grpDetails.groupAdmin %>
                </span>
            </div>
            <div class="detail-item">
                <span class="detail-label">Created:</span>
                <span class="detail-value">
                    <%= grpDetails.date %>
                </span>
            </div>
            <div class="detail-item">
                <span class="detail-label">Created At:</span>
                <span class="detail-value">
                    <%= grpDetails.createdAt %>
                </span>
            </div>
        </div>
        <div class="members-section">
            <h3>Members</h3>
            <% otherMembers.forEach(member=> { %>
                <div class="member-item">
                    <div class="member-name">
                        <a href="/chat/private/<%= member %>">
                            <%= member %>
                        </a>
                    </div>
                    <button class="delete-member" onclick="deleteUser('<%= grpDetails.groupName %>', '<%= member %>')">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>
                <% }) %>
        </div>
    </div>

    <div id="exit-confirmation">
        <div class="exit-confirmation-content">
            <h3>Do you really want to leave this group?</h3>
            <div class="btns">
                <button id="yes" class="confirmation-btn btn-yes">Yes, Leave</button>
                <button id="no" class="confirmation-btn btn-no">Cancel</button>
            </div>
        </div>
    </div>

    <div class="chat-window">
        <div class="header">
            <div class="about-group">
                <div class="group-avatar">
                    <%= grpDetails.groupName.charAt(0).toUpperCase() %>
                </div>
                <div class="group-info">
                    <h1>
                        <%= grpDetails.groupName %>
                    </h1>
                    <div class="group-status">
                        <div class="status-dot"></div>
                        <span>Group chat â€¢ <%= otherMembers.length + 1 %> members</span>
                    </div>
                </div>
            </div>
            <div class="features">
                <button class="feature-btn" id="about" title="Group Info">
                    <i class="fa-solid fa-circle-info"></i>
                </button>
                <button class="feature-btn" id="exit" title="Exit Group">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </button>
            </div>
        </div>

        <div class="chattings">
            <ul id="messages">
                <% sortedChats.forEach(day=> { %>
                    <p class="date">
                        <%= day[0].date %>
                    </p>
                    <% day.forEach(msg=> { %>
                        <li class="message <%= msg.sender === userDetails.username ? 'sent' : 'received' %>">
                            <% if (msg.sender !==userDetails.username) { %>
                                <strong>
                                    <%= msg.sender %>
                                </strong>
                                <% } %>
                                    <%= msg.content %>
                        </li>
                        <% }) %>
                            <% }) %>
            </ul>
        </div>

        <div class="msg">
            <form id="inputBox">
                <input type="text" placeholder="Type your message here..." id="content" autocomplete="off">
                <button type="submit">Send</button>
            </form>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/groupChat.js"></script>
</body>

</html>